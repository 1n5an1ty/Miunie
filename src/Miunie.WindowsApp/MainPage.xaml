<Page
    x:Class="Miunie.WindowsApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Miunie.WindowsApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlChromeHighAcrylicWindowMediumBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Button HorizontalAlignment="Stretch" Name="StartMiunieBtn" Click="StartMiunieBtn_OnClick">Start Miunie</Button>
            <Rectangle Height="20"></Rectangle>
            <PasswordBox Name="TokenPasswordBox"></PasswordBox>
            <Button HorizontalAlignment="Stretch" Name="ApplyTokenBtn" Click="ApplyTokenBtn_OnClick">Set Token</Button>
        </StackPanel>

        <ListBox Grid.Column="1" Name="LogListBox">
            <ListBoxItem>The log will appear here...</ListBoxItem>
        </ListBox>
    </Grid>
</Page>
