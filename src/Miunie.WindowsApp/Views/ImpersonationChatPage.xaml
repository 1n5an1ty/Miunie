<Page
    x:Class="Miunie.WindowsApp.Views.ImpersonationChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:w="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    xmlns:views="using:Miunie.Core.Entities.Views"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding ImpersonationChatPageInstance, Source={StaticResource Locator}}">
    <Page.Resources>
        <w:XamlUICommand Command="{Binding SendMessage}" x:Name="SendMessageCommand" />
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MasterColumn" Width="320" />
            <ColumnDefinition x:Name="DetailColumn" Width="*" />
        </Grid.ColumnDefinitions>

        <ListView ItemsSource="{Binding Channels}" SelectedValue="{Binding SelectedChannel, Mode=TwoWay}" x:Name="MasterListView">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="views:TextChannelView">
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ContentPresenter
            x:Name="DetailContentPresenter"
            Grid.Column="1"
            Padding="0"
            Content="{x:Bind MasterListView.SelectedItem, Mode=OneWay}" HorizontalAlignment="Stretch">
            <ContentPresenter.ContentTemplate>
                <DataTemplate x:DataType="views:TextChannelView">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ScrollViewer Grid.ColumnSpan="2">
                            <ListView Height="Auto" ItemsSource="{Binding Messages, Converter={StaticResource SortedListConverter}}">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="views:MessageView">
                                        <StackPanel Orientation="Horizontal" Padding="10">
                                            <PersonPicture ProfilePicture="{Binding AuthorAvatarUrl}" Height="45" Width="45" VerticalAlignment="Top"/>
                                            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="12, 0, 0, 0">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                                    <TextBlock Foreground="LightGoldenrodYellow" FontSize="15" FontWeight="Bold" Text="{Binding AuthorName}"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Content}"/>
                                                <TextBlock FontSize="10" FontStyle="Italic" Text="{Binding TimeStamp}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                        <TextBox Grid.Row="1" x:Name="MessageTextBox" Text="{Binding NoText}" PlaceholderText="Type your message here." HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,5,0,10"/>
                        <Button Grid.Row="1" Grid.Column="1" Command="{StaticResource SendMessageCommand}" CommandParameter="{Binding ElementName=MessageTextBox, Path=Text, RelativeSource={RelativeSource Mode=TemplatedParent}}" FontFamily="Segoe MDL2 Assets" Content="&#xE725;" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,5,5,10"/>
                    </Grid>
                </DataTemplate>
            </ContentPresenter.ContentTemplate>
        </ContentPresenter>
    </Grid>
</Page>
